trigger BatchErrorEventTrigger on BatchApexErrorEvent(after insert) {
    List<BatchApexErrorEvent> events = new List<BatchApexErrorEvent>(Trigger.new);
    Error_log__c newError;      
    newError.JobId__c = events[0].AsyncApexJobId;
    newError.Error__c = events[0].Message;
    newError.Records__c = events[0].JobScope; 
    insert newError;
}